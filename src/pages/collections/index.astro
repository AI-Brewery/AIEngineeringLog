---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/home/Navigation.tsx';

// Define collections metadata
const collections = [
  {
    title: "RAG Systems",
    slug: "rag",
    description: "Learn to build Retrieval-Augmented Generation systems from scratch to production",
    posts: 9,
    tags: ["rag", "embeddings", "vector-databases", "llm"]
  },
  {
    title: "Prompt Engineering",
    slug: "prompt-engineering", 
    description: "Master the art and science of crafting effective prompts for LLMs",
    posts: 6,
    tags: ["prompts", "llm", "optimization", "techniques"]
  },
  {
    title: "AI Agents",
    slug: "agents",
    description: "Build autonomous AI agents that can reason, plan, and take actions",
    posts: 8,
    tags: ["agents", "reasoning", "planning", "tools"]
  }
];
---

<Layout 
  title="Collections - AIEngineeringLog"
  description="Browse our curated collections of AI engineering tutorials, from RAG systems to production deployment."
>
  <div class="page-container">
    <Navigation client:load currentPath="/collections" />
    
    <main class="main-content">
      <header class="collections-header">
        <h1 class="collections-title">Learning Collections</h1>
      </header>

             <div class="collections-grid">
         {collections.map(collection => (
           <article class="collection-card">
             <div class="collection-header">
               <div class="collection-stats">
                 <span class="post-count">{collection.posts} posts</span>
               </div>
             </div>
             
             <h2 class="collection-title">
               <a href={`/collections/${collection.slug}`}>{collection.title}</a>
             </h2>
             
             <p class="collection-description">{collection.description}</p>
             
             <div class="collection-tags">
               {collection.tags.map(tag => (
                 <span class="tag">{tag}</span>
               ))}
             </div>
             
             <div class="collection-footer">
               <a href={`/collections/${collection.slug}`} class="collection-link">
                 Start Learning ‚Üí
               </a>
             </div>
           </article>
         ))}
       </div>

      <section class="collections-info">
        <h2>How Collections Work</h2>
        <div class="info-grid">
          <div class="info-item">
            <h3>üìö Sequential Learning</h3>
            <p>Posts are numbered and build on each other. Start from #1 and work your way through.</p>
          </div>
          <div class="info-item">
            <h3>üõ†Ô∏è Hands-on Projects</h3>
            <p>Every post includes code examples and projects you can build and deploy.</p>
          </div>
          <div class="info-item">
            <h3>üë• Written by Practitioners</h3>
            <p>Authors have built and deployed these systems in production environments.</p>
          </div>
        </div>
      </section>
    </main>

    <footer class="footer">
      <div class="footer-content">
        <p>&copy; 2025 AIEngineeringLog. Built with ‚ù§Ô∏è by practitioners, for practitioners.</p>
      </div>
    </footer>
  </div>
</Layout>

 