---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/home/Navigation.tsx';
import AuthorCard from '../../components/AuthorCard.tsx';
import { getAllAuthors } from '../../data/authors';

const authors = getAllAuthors();
const pageTitle = "Authors - AIEngineeringLog";
const pageDescription = "Meet the practitioners and engineers who share their real-world AI engineering experiences";
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="page-container">
    <Navigation client:load currentPath="/authors" />
    
    <main class="main-content">
      <div class="authors-header">
        <h1 class="section-title">Authors</h1>
        <p class="section-subtitle">Meet the practitioners who share their real-world AI engineering experiences</p>
      </div>

      <div class="authors-info">
        <p>Our authors are experienced AI engineers, researchers, and practitioners who have built production systems at scale. Each post comes from hands-on experience - not just theoretical knowledge.</p>
        
        <div class="authors-stats">
          <div class="stat-item">
            <span class="stat-number">{authors.length}</span>
            <span class="stat-label">Expert Authors</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">50+</span>
            <span class="stat-label">Years Combined Experience</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">15+</span>
            <span class="stat-label">Companies Represented</span>
          </div>
        </div>
      </div>

      <div class="authors-grid">
        {authors.map(author => (
          <AuthorCard 
            authorId={author.id} 
            showFullBio={true}
            client:load 
          />
        ))}
      </div>

      <div class="join-authors">
        <h2>Want to Share Your Experience?</h2>
        <p>We're always looking for experienced practitioners to share their real-world AI engineering stories. If you've built production AI systems and want to help others learn, we'd love to hear from you.</p>
        <div class="join-actions">
          <a href="/contribute" class="btn btn-primary">Become an Author</a>
          <a href="/about" class="btn btn-secondary">Learn More</a>
        </div>
      </div>
    </main>

    <footer class="footer">
      <div class="footer-content">
        <p>&copy; 2025 AIEngineeringLog. Built with ❤️ by practitioners, for practitioners.</p>
      </div>
    </footer>
  </div>
</Layout> 