---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/home/Navigation.tsx';

const pageTitle = "About - AIEngineeringLog";
const pageDescription = "A blog-based course on AI engineering by AI Brewery Club";
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="page-container">
    <Navigation client:load currentPath="/about" />
    
    <main class="main-content">
      <div class="about-header">
        <h1 class="section-title">About AIEngineeringLog</h1>
        <p class="section-subtitle">A blog-based course on AI engineering by AI Brewery Club</p>
      </div>

      <div class="about-content">
        <div class="about-section">
          <h2>ï¿½ What This Is</h2>
          <p>AIEngineeringLog is a blog-based course on AI engineering created by AI Brewery Club. We focus on practical AI development through hands-on tutorials and real-world projects.</p>
        </div>

        <div class="about-section">
          <h2>Get Started</h2>
          <div class="about-actions">
            <a href="/collections" class="btn btn-primary">Start Learning</a>
          </div>
        </div>
      </div>
    </main>

    <footer class="footer">
      <div class="footer-content">
        <p>&copy; 2025 AIEngineeringLog. AI Brewery Club.</p>
      </div>
    </footer>
  </div>
</Layout> 